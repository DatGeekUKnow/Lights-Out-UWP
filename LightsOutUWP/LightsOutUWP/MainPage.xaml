<Page
    x:Class="LightsOutUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightsOutUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="446" Width="356">

    <RelativePanel Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <Canvas Name="boardCanvas" Height="200" Width="200" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="0,0,0,100"/>
        <Button Name="newGameButton" RelativePanel.Below="boardCanvas" RelativePanel.AlignLeftWith="boardCanvas" Content="New Game" FontSize="15" Margin="0,-150,0,0" Click="newGameButton_Click" HorizontalAlignment="Center"/>
        <Button Name="aboutButton" RelativePanel.AlignVerticalCenterWith="newGameButton" RelativePanel.AlignRightWith="boardCanvas" Content="About" FontSize="15" Margin="0,-150,0,0" Click="aboutButton_Click" HorizontalAlignment="Center"/>
    </RelativePanel>
</Page>
